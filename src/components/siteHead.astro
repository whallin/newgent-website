---
interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="canonical" href={Astro.url} />
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Basic SEO -->
<title>{title} | Newgent</title>
<meta name="description" content={description} />
<meta itemprop="name" content=`${title} | Newgent` />
<meta itemprop="description" content={description} />
<meta property="og:title" content=`${title} | Newgent` />
<meta property="og:description" content={description} />
<meta property="twitter:title" content=`${title} | Newgent` />
<meta property="twitter:description" content={description} />

<!-- Schema Markup (JSON-LD) -->
<script is:inline type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "Corporation",
		"name": "Newgent Digital",
		"alternateName": "NWG Digital AB",
		"url": "https://newgent.digital",
		"logo": "https://newgent.digital/logomark.png",
		"sameAs": ["https://linkedin.com/company/heynewgent/", "https://newgent.digital"]
	}
</script>

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content="Newgent (Digital)" />
<meta property="twitter:card" content="summary" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:site" content="Newgent (Digital)" />

<!-- Favicons -->
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
<link rel="manifest" href="/favicon/site.webmanifest" />
<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#3083ff" />
<meta name="apple-mobile-web-app-title" content="Newgent" />
<meta name="application-name" content="Newgent" />
<meta name="msapplication-TileColor" content="#3083ff" />
<meta name="theme-color" content="#3083ff" />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />

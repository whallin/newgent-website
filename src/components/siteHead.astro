---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { ViewTransitions } from "astro:transitions";
import HrefLangs from "./hrefLangs.astro";
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="canonical" href={Astro.url} />

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- hreflang -->
<HrefLangs />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content="Newgent Digital" />
<meta property="twitter:card" content="summary" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:site" content="Newgent Digital" />

<!-- Favicons -->
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href="/favicon/apple-touch-icon.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href="/favicon/favicon-32x32.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="16x16"
  href="/favicon/favicon-16x16.png"
/>
<link rel="manifest" href="/favicon/site.webmanifest" />
<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5" />
<meta name="msapplication-TileColor" content="#3083ff" />
<meta name="theme-color" content="#3083ff" />
<meta name="apple-mobile-web-app-title" content="Newgent Digital" />
<meta name="application-name" content="Newgent Digital" />

<!-- Fonts -->
<GoogleFontsOptimizer
  url="https://fonts.googleapis.com/css2?family=Anek+Latin:wght@400;700&family=Inter:wght@400;700&display=swap"
/>

<!-- Analytics -->
<script
  type="text/partytown"
  src=`${import.meta.env.PUBLIC_UMAMI_URL}`
  data-website-id=`${import.meta.env.PUBLIC_UMAMI_ID}`
  data-domains="newgent.digital"></script>

<!-- Transitions -->
<ViewTransitions />

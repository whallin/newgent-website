---
import "@fontsource-variable/anek-latin/wdth.css";
import "@fontsource-variable/geist-mono";
import { getAbsoluteLocaleUrl } from "astro:i18n";

interface Props {
  title?: string;
  description?: string;
  article?: boolean;
  keywords?: string[];
}

const translations = {
  en: {
    title: "TITLE",
    description: "DESCRIPTION",
  },
  sv: {
    title: "TITEL",
    description: "BESKRIVNING",
  },
};

const locale = Astro.currentLocale === "en" || Astro.currentLocale === "sv" ? Astro.currentLocale : "en";
const {
  title = translations[locale].title,
  description = translations[locale].description,
  article = false,
  keywords = [],
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#3083FF" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<title>{title} - Newgent</title>

<!-- Meta -->
<meta name="description" content={description} />
<meta name="author" content="Newgent Digital" />
{keywords.length > 0 && <meta name="keywords" content={keywords.join(", ")} />}
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="canonical" href={Astro.url} />
{
  ["en", "sv"].map((lang) => (
    <link
      rel="alternate"
      hreflang={lang}
      href={getAbsoluteLocaleUrl(lang, Astro.url.pathname.replace(`/${Astro.currentLocale}`, ""))}
    />
  ))
}

<!-- Favicon -->
<link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
<link rel="shortcut icon" href="/favicon/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
<meta name="apple-mobile-web-app-title" content="Newgent" />
<link rel="manifest" href="/favicon/site.webmanifest" />

<!-- Open Graph -->
<meta property="og:type" content={article ? "article" : "website"} />
<meta property="og:site_name" content="Newgent Digital" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={`${title} - Newgent`} />
<meta property="og:description" content={description} />
<meta property="og:image" content="https://newgent.digital/meta.png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={description} />
<meta property="og:locale" content={Astro.currentLocale} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content=`${title} - Newgent` />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content="https://newgent.digital/meta.png" />
<meta name="twitter:image:alt" content={description} />

